{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop":true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2017",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
